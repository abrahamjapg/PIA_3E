  while True:
      print("\nMenú:")
      print("1. Consultas web")
      print("2. Consultas de registros")
      print("3. Estadísticas")
      print("4. Gráficas")
      print("5. Borrar todo")
      print("6. Salir")
      opcion = input("Seleccione una opción: ")
 
      if opcion == "1":
          sub_menu_web(datos_pokemon)    
      elif opcion == "2":
          datos_cargados = cargar_datos(directorio_archivos)
          consultar_registros(datos_cargados)
          actualizar_archivos(directorio_archivos, datos_cargados, datos_pokemon)
